<!DOCTYPE html>
<html lang="en">
<head>
    <% include elements/tag_head.ejs%>
</head>
<body>
<!--
	Upper Header Section
-->
<% include elements/upper_header.ejs%>
<!--
Lower Header Section
-->
<div class="container">
    <% include elements/lower_header.ejs%>

    <!--
    Navigation Bar Section
    -->
    <%include elements/navbar.ejs%>
    <!--
    Body Section
    -->
    <div class="row">
        <%if(userdata.author === "shop"){%>
        <%include elements/navbar_report.ejs%>
        <%}%>
        <div id="sidebar" class="span1">
        </div>
        <div class="span12">
            <div class="well well-small">
                <hr class="soften"/>
                <%include partials/messages.ejs%>
                <table class="table table-bordered table-condensed">

                    <tbody>
                    <tr>
                        <th colspan="5" class="header-table" style="color: red; font-size: x-large">
                            <%=title%>
                        </th>
                    </tr>

                    <tr>
                        <th style="width: 5%; text-align: center"><b>STT</b></th>
                        <th style="width: 20%; text-align: center"><b>Ảnh</b></th>
                        <th style="width: 20%; text-align: center"><b>Tên sản phẩm</b></th>
                        <th style="width: 20%; text-align: center"><b>Số lượng đã bán</b></th>
                        <th style="width: 20%; text-align: center">Số lượng còn lại</th>
                    </tr>

                    <%if(products){%>
                    <%products.forEach(function (product){%>
                    <tr>
                        <td style="width: 5%; text-align: center"><%=product.stt%></td>
                        <td style="width: 20%; text-align: center"><img src="<%=product.thumbnail%>" style="width: 40px"></td>
                        <td style="width: 20%; text-align: center"><%=product.nameProduct%></td>
                        <td style="width: 20%; text-align: center"><%=product.quantitySale%></td>
                        <td style="width: 20%; text-align: center"><%=product.quantityInStoreHouse%></td>
                    </tr>
                    <%});%>
                    <%}%>
                    </tbody>
                </table>
            </div>

        </div>

        <!--


 </div> //container

  <% include elements/copyright.ejs%>
  <a href="#" class="gotop"><i class="icon-double-angle-up"></i></a>
  <-- Placed at the end of the document so the pages load faster -->
        <% include elements/script_end.ejs%>
    </div>

</div>
</body>
</html>
