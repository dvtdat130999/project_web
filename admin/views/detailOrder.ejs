<!DOCTYPE html>
<html lang="en">
<head>
    <% include elements/tag_head.ejs%>
</head>
<body>


<!--
	Upper Header Section
-->
<% include elements/upper_header.ejs%>
<!--
Lower Header Section
-->
<div class="container">
    <% include elements/lower_header.ejs%>

    <!--
    Navigation Bar Section
    -->
    <%include elements/navbar.ejs%>
    <!--
    Body Section
    -->

    <div class="row">
        <div id="sidebar" class="span2">

        </div>
        <div class="span9">
            <div class="well well-small">
                <hr class="soften"/>
                <table class="table table-bordered table-condensed">

                    <tbody>
                    <th colspan="3" style="text-align: center; color: red; font-size: x-large">
                        CHI TIẾT ĐƠN ĐẶT HÀNG
                    </th>
                    <tr>
                        <td class="tieude" rowspan="7"><img src="<%= order.thumbnail %>"></td>
                        <td class="tieude"><b>Tên sản phẩm</b></td>
                        <td><%= order.nameProduct %></td>

                    </tr>
                    <tr>
                        <td class="tieude"><b>Số lượng</b></td>
                        <td><%= order.quantity %></td>

                    </tr>
                    <tr>
                        <%if(order.confirm == 0){%>
                            <td class="tieude" style="color: red"><b>Số lượng trong kho</b></td>
                            <td style="color: red; font-weight: bold"><%= order.quantityInStoreHouse %></td>
                        <%};%>

                    </tr>
                    <tr>
                        <td class="tieude"><b>Tên khách hàng</b></td>
                        <td><%= order.nameUser %></td>

                    </tr>
                    <tr>
                        <td class="tieude"><b>Địa chỉ giao hàng</b></td>
                        <td><%= order.addressDelivery %></td>

                    </tr>

                    <tr>
                        <td class="tieude"><b>SĐT</b></td>
                        <td><%= order.phoneNumber %></td>

                    </tr>

                    <tr>
                        <td class="tieude" style="color: red"><b>Tình trạng</b></td>
                        <%if(order.confirm === 0){%>
                            <td style="color: red">Chưa xác nhận</td>

                        <%}else{%>
                        <%if(order.confirm === 1){%>
                            <td style="color: red">Đang giao hàng</td>
                        <%}else{%>
                            <td style="color: red">Đã giao hàng</td>
                        <%};%>
                        <%};%>

                    </tr>

                    <%if(order.confirm === 0){%>
                    <%if(order.quantity > order.quantityInStoreHouse){%>
                        <td colspan="3" class="warning-quantity">KHÔNG ĐỦ SẢN PHẨM ĐỂ GIAO HÀNG</td>
                    <%};%>%>
                    <%};%>

                    </tbody>
                </table>




                <div class="control-group">
                    <a href="/order" class="shopBtn btn-large">Quay lại</a>
                    <%if(order.confirm !== 2){%>
                    <%if(order.confirm === 0){%>
                    <%if(order.quantity <= order.quantityInStoreHouse){%>
                        <a href="<%= order.accept %>" class="shopBtn btn-large">Xác nhận </a>
                    <%};%>%>
                    <%}else{%>
                        <a href="<%= order.accept %>" class="shopBtn btn-large">Xác nhận đã giao hàng</a>
                    <%}%>

                    <a href="<%= order.cancel %>" class="shopBtn btn-large">Hủy </a>
                </div>
                <%};%>
            </div>

        </div>

        <!--


 </div> //container

  <% include elements/copyright.ejs%>
  <a href="#" class="gotop"><i class="icon-double-angle-up"></i></a>
  <-- Placed at the end of the document so the pages load faster -->
        <% include elements/script_end.ejs%>
    </div>

</div>
</body>
</html>
