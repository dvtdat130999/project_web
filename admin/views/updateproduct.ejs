<div class="container">
    <% include elements/lower_header.ejs%>

    <!--
    Navigation Bar Section
    -->
    <!--
    Body Section
    -->
    <div class="row">
        <% include elements/sidebar.ejs%>
        <div class="span9">
            <div class="well">
                <form class="form-horizontal" action="/products/update" enctype="multipart/form-data" method="post">
                    <h3>Chỉnh sửa thông tin sản phẩm</h3>
                    <% include ./partials/messages.ejs%>

                    <div class="control-group">
                        <label class="control-label" for="id">ID <sup>*</sup></label>
                        <div class="controls">
                            <input type="text" name="id" value="<%=id%>" readonly>
                        </div>
                    </div>

                    <div class="control-group">
                        <label class="control-label" for="name">Tên sản phẩm <sup>*</sup></label>
                        <div class="controls">
                            <input type="text" name="name" placeholder="Tên của sản phẩm" value="<%=nameproduct%>" required>
                        </div>
                    </div>
                    <div class="control-group">
                        <label class="control-label" for="description">Mô tả <sup>*</sup></label>
                        <div class="controls">
                            <input type="text" name="description" placeholder="Mô tả sản phẩm" value="<%=description%>" required>
                        </div>
                    </div>
                    <div class="control-group">
                        <label class="control-label" for="category">Loại sản phẩm <sup>*</sup></label>
                        <div class="controls">
                            <input type="text" name="category" placeholder="Đồng hồ, vòng tay, nhẫn, vòng cổ" value="<%=category%>" required>
                        </div>
                    </div>
                    <div class="control-group">
                        <label class="control-label" for="color">Màu sắc <sup>*</sup></label>
                        <div class="controls">
                            <input type="text" name="color" placeholder="Vàng, trắng, tím, xanh dương" value="<%=color%>" required>
                        </div>
                    </div>
                    <div class="control-group">
                        <label class="control-label" for="sex">Giới tính <sup>*</sup></label>
                        <div class="controls">
                            <input type="text" name="sex" placeholder="Nam, nữ" value="<%=sex%>" required>
                        </div>
                    </div>
                    <div class="control-group">
                        <label class="control-label" for="trademark">Nhãn hiệu <sup>*</sup></label>
                        <div class="controls">
                            <input type="text" name="trademark" placeholder="Skymond Luxury, PNJ, DOJI, SJC" value="<%=trademark%>" required>
                        </div>
                    </div>
                    <div class="control-group">
                        <label class="control-label" for="price">Giá<sup>*</sup></label>
                        <div class="controls">
                            <input type="number" name="price" placeholder="Giá của sản phẩm" value="<%=price%>" required>
                        </div>
                    </div>
                    <div class="control-group">
                        <label class="control-label" for="quantity">Số lượng <sup>*</sup></label>
                        <div class="controls">
                            <input type="number" placeholder="Số lượng sản phẩm" name="quantity" value="<%=quantity%>" required>
                        </div>
                    </div>
                    <div class="control-group">
                        <label class="control-label" for="thumbnail">Đổi ảnh <sup>*</sup></label>
                        <div class="controls">
                            <input type="file" name="thumbnail" multiple="multiple">
                            <input type="text" placeholder="Số lượng sản phẩm" name="thumb" value="<%=thumbnail%>" readonly>
                        </div>
                    </div>
                    <div class="control-group">
                        <div class="controls">
                            <button type="submit" class="exclusive shopBtn">Thay đổi</button>
                        </div>
                    </div>
                </form>
            </div>


        </div>

