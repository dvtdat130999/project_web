<!DOCTYPE html>
<html lang="en">
<head>
    <% include elements/tag_head.ejs%>
</head>
<body>
<!--
	Upper Header Section
-->
<% include elements/upper_header.ejs%>
<!--
Lower Header Section
-->
<div class="container">
    <% include elements/lower_header.ejs%>

    <!--
    Navigation Bar Section
    -->
    <% include elements/navbar.ejs%>
    <!--
    Body Section
    -->
    <div class="row">
        <div class="span12">

            <div class="well well-large">
                <%if(userdata.author=='admin'){%>
                <h1>Thông tin tài khoản</h1>
                <hr class="soften"/>

                <table class="table table-bordered table-condensed">

                    <thead>
                    <tr>
                        <th><h3>Tài khoản</h3></th>

                        <th><h3>Tên</h3></th>
                        <th><h3>Quyền</h3></th>

                    </tr>
                    </thead>

                    <tbody>
                    <%account_list.forEach(function(account){%>
                        <tr>
                            <td>
                                <a href="<%= account.uriDetail %>"><%= account.username %> </a>
                            </td>

                            <td><%= account.name %></td>
                            <td><%= account.author %></td>


                        </tr>
                    <% }); %>




                    </tbody>
                </table><br/>
                <%}%>
                <%if(userdata.author!='admin'){%>
                    <h3 style="color:red;">Bạn không có quyền này</h3>
                <%}%>

                <%if(userdata.author=='admin'){%>
                    <a href="/locked_account" class="shopBtn btn-large pull-right">Khóa tài khoản </a>
                    <a href="/unlocked_account" class="shopBtn btn-large pull-left">Mở tài khoản </a>
                <%}%>



            </div>
        </div>
    </div>

</div>
</body>
</html>
