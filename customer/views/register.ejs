<!DOCTYPE html>
<html lang="en">
<head>
    <% include elements/tag_head.ejs%>

</head>
<body>
<!--
	Upper Header Section
-->
<div class="navbar navbar-inverse navbar-fixed-top">
    <div class="topNav">
        <div class="container">
            <div class="alignR">
                <div class="pull-left socialNw">
                    <a href="#"><span class="icon-twitter"></span></a>
                    <a href="#"><span class="icon-facebook"></span></a>
                    <a href="#"><span class="icon-youtube"></span></a>
                    <a href="#"><span class="icon-tumblr"></span></a>

                </div>
                <a class="active" href="/"> <span class="icon-home"></span> Trang chủ</a>
                <a href="/register"><span class="icon-lock"></span> Đăng ký </a>
                <a href="/login"><span class="icon-lock"></span> Đăng nhập </a>
                <a href="/cart"><span class="icon-shopping-cart"></span> Giỏ hàng </a>

            </div>
        </div>
    </div>
</div>
<!--
Lower Header Section
-->
<div class="container">
    <% include elements/lower_header.ejs%>


    <!--
    Navigation Bar Section
    -->
    <% include elements/navbar.ejs%>

    <!--
    Body Section
    -->
    <div class="row">
        <% include elements/sidebar.ejs%>

        <div class="span9">
            <ul class="breadcrumb">
                <li><a href="/">Trang chủ</a> <span class="divider">/</span></li>
                <li class="active">Đăng ký</li>
            </ul>
            <hr class="soft"/>
            <div class="well">
                <form class="form-horizontal" action="/register" method="post">
                    <h3>Đăng ký</h3>

                    <% include ./partials/messages.ejs%>
                    <div class="control-group">
                        <label class="control-label" for="inputEmail">Tài khoản <sup>*</sup></label>
                        <div class="controls">
                            <input type="text" placeholder=""name="username"value="<%=typeof username !='undefined' ? username :''%>">
                        </div>
                    </div>
                    <div class="control-group">
                        <label class="control-label" for="inputEmail">Mật khẩu <sup>*</sup></label>
                        <div class="controls">
                            <input type="password" placeholder=""name="password" value="<%=typeof password !='undefined' ? password :''%>">
                        </div>
                    </div>
                    <div class="control-group">
                        <label class="control-label" for="inputEmail">Nhập lại mật khẩu <sup>*</sup></label>
                        <div class="controls">
                            <input type="password" placeholder=""name="password2"value="<%=typeof password2 !='undefined' ? password2 :''%>">
                        </div>
                    </div>
                    <div class="control-group">
                        <label class="control-label" for="inputFname">Họ tên<sup>*</sup></label>
                        <div class="controls">
                            <input type="text" id="inputFname" placeholder=""name="name"value="<%=typeof name !='undefined' ? name :''%>">
                        </div>
                    </div>
                    <div class="control-group">
                        <label class="control-label" for="inputEmail">Địa chỉ <sup>*</sup></label>
                        <div class="controls">
                            <input type="text" placeholder=""name="address"value="<%=typeof address !='undefined' ? address :''%>">
                        </div>
                    </div>
                    <div class="control-group">
                        <label class="control-label" for="inputEmail">Số điện thoại <sup>*</sup></label>
                        <div class="controls">
                            <input type="number" placeholder=""name="phone"value="<%=typeof phone !='undefined' ? phone :''%>">
                        </div>
                    </div>
                    <div class="control-group">
                        <label class="control-label" for="inputEmail">Email <sup>*</sup></label>
                        <div class="controls">
                            <input type="text" placeholder=""name="email"value="<%=typeof email !='undefined' ? email :''%>">
                        </div>
                    </div>

                    <div class="control-group">
                        <div class="controls">
                            <button type="submit" class="exclusive shopBtn">Đăng ký</button> <a href="/login">Đăng nhập</a>
                        </div>
                    </div>
                </form>
            </div>




        </div>
    </div>
    <!--
    Clients
    -->
    <% include elements/client.ejs%>
    <!--
    Footer
    -->
    <% include elements/footer.ejs%>
</div><!-- /container -->

<% include elements/client.ejs%>

<a href="#" class="gotop"><i class="icon-double-angle-up"></i></a>
<!-- Placed at the end of the document so the pages load faster -->
<% include elements/script_end.ejs%>>
</body>
</html>
