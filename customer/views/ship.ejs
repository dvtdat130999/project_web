<!DOCTYPE html>
<html lang="en">
<head>
    <% include elements/tag_head.ejs%>

</head>
<body <%if (!userdata) {%>onload="loadItem()"<%}%>>
<!--
	Upper Header Section
-->
<% include ./elements/upper_header.ejs%>
<!--
Lower Header Section
-->
<div class="container">
    <% include elements/lower_header.ejs%>

    <!--
    Navigation Bar Section
    -->
    <% include elements/navbar.ejs%>
    <!--
    Body Section
    -->
    <div class="row">
        <% include elements/sidebar.ejs%>
        <div class="span9">
            <ul class="breadcrumb">
                <li><a href="/">Trang chủ</a> <span class="divider">/</span></li>
                <li class="active">Giao hàng</li>
            </ul>
            <h3>Chi tiết giao hàng</h3>
            <hr class="soft"/>

            <div class="well">
                <form class="form-horizontal" action="/status" method="post">
                    <%if(userdata){%>

                    <h3>Thông tin chi tiết giao hàng</h3>
                    <div class="control-group">
                        <label class="control-label">Địa chỉ giao hàng<sup>*</sup></label>
                        <div class="controls">
                            <input class="input-address" name="address" type="text" placeholder="Nhập địa chỉ"/>
                        </div>
                    </div>

                    <div class="control-group">
                        <div class="controls">
                            <input type="submit" name="submitAccount" value="Đồng ý" class="shopBtn exclusive">
                        </div>

                    </div>
                    <a href="/cart" class="shopBtn btn-large"><span class="icon-arrow-left"></span> Giỏ hàng</a>
                    <%}%>

                        <%if(!userdata){%>
                            <h3 style="color: red">Hãy đăng nhập để thực hiện đặt hàng</h3>

                        <%}%>

                </form>
            </div>




        </div>
        <!--
        Clients
        -->
        <% include elements/client.ejs%>
        <!--
        Footer
        -->
        <% include elements/footer.ejs%>

    </div><!-- /container -->

    <% include elements/copyright.ejs%>
    <a href="#" class="gotop"><i class="icon-double-angle-up"></i></a>
    <!-- Placed at the end of the document so the pages load faster -->
    <% include elements/script_end.ejs%>
</div>
