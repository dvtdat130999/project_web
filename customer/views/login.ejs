<!DOCTYPE html>
<html lang="en">
<head>
    <% include ./elements/tag_head.ejs%>
</head>
<body <%if (!userdata) {%>onload="loadItem()"<%}%>>
<!--
	Upper Header Section
-->
<% include ./elements/upper_header.ejs%>
<!--
Lower Header Section
-->
<div class="container">
   <% include elements/lower_header.ejs%>

    <!--
    Navigation Bar Section
    -->
    <% include elements/navbar.ejs%>
    <!--
    Body Section
    -->
    <div class="row">
        <% include elements/sidebar.ejs%>
        <div class="span9">
            <ul class="breadcrumb">
                <li><a href="/">Trang chủ</a> <span class="divider">/</span></li>
                <li class="active">Đăng nhập</li>
            </ul>
            <hr class="soft"/>
            <div class="well">

                        <form action="/users/login" method="post">
                            <input type="hidden" id="StringItem" name="StringItem"/>
                            <script>
                                document.getElementById("StringItem").value=localStorage.getItem("listItem");
                            </script>
                            <h3> Đăng nhập</h3>
                            <% include ./partials/messages.ejs%>
                            <%if (typeof msg!=="undefined"){%>
                                <div style="color: red">Sai tài khoản hoặc mật khẩu</div>
                            <%}%>
                            <div class="control-group">
                                <label class="control-label" for="inputEmail">Tài khoản</label>
                                <div class="controls">
                                    <input class="span3"  name="username"type="text" placeholder="Tài khoản">
                                </div>
                            </div>
                            <div class="control-group">
                                <label class="control-label" for="inputPassword">Mật khẩu</label>
                                <div class="controls">
                                    <input type="password" name="password"class="span3" placeholder="Mật khẩu">
                                </div>
                            </div>

                            <div class="control-group">
                                <div class="controls">
                                    <button type="submit" class="exclusive shopBtn">Đăng nhập</button> <a href="/users/forget">Quên mật khẩu</a>
                                </div>
                            </div>
                            <div class="control-group">
                                <div class="controls">
                                    <strong>Chưa có tài khoản?</strong><a href="/users/register">Đăng ký</a>
                                </div>
                            </div>
                        </form>
                    </div>

        </div>
    </div>
    <!--
    Clients
    -->
    <% include elements/client.ejs%>
    <!--
    Footer
    -->
    <% include elements/footer.ejs%>

</div><!-- /container -->

    <% include elements/copyright.ejs%>
<a href="#" class="gotop"><i class="icon-double-angle-up"></i></a>
