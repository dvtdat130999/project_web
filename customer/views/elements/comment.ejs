<div class="row bootstrap snippets">
    <div class="col-md-6 col-md-offset-2 col-sm-12">
        <div class="comment-wrapper">
            <div class="panel panel-info">
                <div class="panel-heading">
                    &nbsp&nbsp&nbsp&nbsp&nbsp&nbsp<b>Bình luận</b>
                </div>
                <div class="panel-body">
                    <%let username="";
                    if(userdata){
                        username=userdata.name;
                    }else{
                        username="visitor";
                    }%>
                    <form action="/products?id=<%=product_list[0]._id%>" id="CommentForm" enctype="multipart/form-data" method="post">
                        <textarea id="CommentBox" name="CommentBox" class="form-control" placeholder="Hãy nêu suy nghĩ của bạn về sản phẩm..." rows="3"></textarea>
                        <input type="hidden" name="username" value="<%=username%>"/>
                    </form>
                    <br>

                    <button id="PostButton" type="button" onclick="document.getElementById('CommentForm').submit()" class="btn btn-info pull-right">Đăng bình luận</button>
                    <div class="clearfix"></div>
                    <hr>

                    <% if(typeof comments==="undefined"){
                        comments=[];
                    }%>
                    <%let avatar=[];
                        avatar.push("https://bootdey.com/img/Content/user_1.jpg");
                        avatar.push("https://bootdey.com/img/Content/user_2.jpg");
                        avatar.push("https://bootdey.com/img/Content/user_3.jpg");%>
                    <ul class="media-list">
                        <%for (i=0;i<comments.length;i++) {%>
                        <li class="media">
                                    <a href="#" class="pull-left">
                                        <% let index=0;
                                        if(comments[i].userName==="visitor"){
                                            index=(comments.length-i)%3;
                                        }else {
                                            index=comments[i].userName.length%3;
                                        }%>
                                    <img src="<%=avatar[index]%>" alt="" class="img-circle">
                                    </a>
                                    <div class="media-body">
                                    <span class="text-muted pull-right">
                                    <small class="text-muted"><%=comments[i].time%></small>
                            </span>
                            <strong class="text-success"><%=comments[i].userName%></strong>
                                    <p>
                                    <%=comments[i].content%>
                                    </p>
                                    </div>
                                    </li>
                        <%}%>

                    </ul>

                    <ul class="pagination modal-3">
                        <%for (i=1;i<active.length;i++){
                        if (active[i]==="class=active"){%>
                        <li><a href="products?page=<%=i%><%= condition%>" class="prev">&laquo</a></li>
                        <%}}%>
                        <%for (i=0;i<active.length;i++){%>
                        <li> <a href="products?page=<%=i+1%><%= condition%>" <%= active[i]%>><%=i+1%></a></li>
                        <%}%>
                        <%for (i=0;i<active.length-1;i++){
                        if (active[i]==="class=active"){%>
                        <li><a href="products?page=<%=i+2%><%= condition%>" class="next">&raquo;</a></li>
                        <%}}%>

                    </ul>
                </div>
            </div>
        </div>

    </div>
</div>