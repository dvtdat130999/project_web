<!DOCTYPE html>
<html lang="en">
<head>
    <% include ....../elements/tag_head.ejs%>

</head>
<body>
<!--
	Upper Header Section
-->
<% include ../elements/upper_header.ejs%>
<!--
Lower Header Section
-->
<div class="container">
    <% include ../elements/lower_header.ejs%>

    <!--
    Navigation Bar Section
    -->
    <% include ../elements/navbar.ejs%>
    <!--
    Body Section
    -->
    <div class="row">
        <% include ../elements/sidebar.ejs%>
        <% golden_watch(function(watch) { %>

            <div class="row-fluid">
                <ul class="thumbnails">
                    <li class="span4">
                        <div class="thumbnail">
                            <a href="/detail" class="overlay"></a>
                            <a class="zoomTool" href="/detail" title="add to cart"><span class="icon-search"></span> Xem nhanh</a>
                            <a href="/detail"><img src='<%= watch.thumbnail %>' alt=""></a>
                            <div class="caption cntr">
                                <p><%= watch.name %></p>
                                <p><strong> <%= watch.price %></strong></p>
                                <h4><a class="shopBtn" href="#" title="add to cart">Thêm vào giỏ </a></h4>

                                <br class="clr">
                            </div>
                        </div>
                    </li>

                </ul>
            </div>
        <% }); %>
        <div class="span9">
            <div class="well well-small">
                <div class="row-fluid">
                    <div class="span5">
                        <div id="myCarousel" class="carousel slide cntr">
                            <div class="carousel-inner">
                                <div class="item active">
                                    <a href="#"> <img src="assets/img/a.jpg" alt="" style="width:100%"></a>
                                </div>
                                <div class="item">
                                    <a href="#"> <img src="assets/img/b.jpg" alt="" style="width:100%"></a>
                                </div>
                                <div class="item">
                                    <a href="#"> <img src="assets/img/e.jpg" alt="" style="width:100%"></a>
                                </div>
                            </div>
                            <a class="left carousel-control" href="#myCarousel" data-slide="prev">‹</a>
                            <a class="right carousel-control" href="#myCarousel" data-slide="next">›</a>
                        </div>
                    </div>
                    <div class="span7">
                        <h3>Tên [$140.00]</h3>
                        <hr class="soft"/>

                        <form class="form-horizontal qtyFrm">
                            <div class="control-group">
                                <label class="control-label"><span>$140.00</span></label>
                                <div class="controls">
                                    <input type="number" class="span6" placeholder="Qty.">
                                </div>
                            </div>

                            <div class="control-group">
                                <label class="control-label"><span>Màu</span></label>
                                <div class="controls">
                                    <select class="span11">
                                        <option>Đỏ</option>
                                        <option>Tím</option>
                                        <option>Hồng</option>
                                        <option>Trắng</option>
                                    </select>
                                </div>
                            </div>
                            <div class="control-group">
                                <label class="control-label"><span>Nguyên liệu</span></label>
                                <div class="controls">
                                    <select class="span11">
                                        <option>Nguyên liệu 1</option>
                                        <option>Nguyên liệu 1</option>

                                    </select>
                                </div>
                            </div>

                            <p>
                                <button type="submit" class="shopBtn"><span class=" icon-shopping-cart"></span>Thêm vào giỏ</button>
                        </form>
                    </div>
                </div>
                <hr class="softn clr"/>




            </div>
        </div>

        <!--
        Clients
        -->
        <% include ../elements/client.ejs%>
        <!--
        Footer
        -->
        <% include ../elements/footer.ejs%>

    </div><!-- /container -->

    <% include ../elements/copyright.ejs%>
    <a href="#" class="gotop"><i class="icon-double-angle-up"></i></a>
    <!-- Placed at the end of the document so the pages load faster -->
    <% include ../elements/script_end.ejs%>
</div>
</body>
</html>
